{
  "title": "Bid Schema",
  "type": "object",
  "properties": {
    "MongoId": {
      "type": "string",
      "description": "The unique identifier generated by MongoDB for the bid."
    },
    "BidId": {
      "type": "integer",
      "description": "The ID of the bid.",
      "minimum": 1
    },
    "ArtifactId": {
      "type": "integer",
      "description": "The ID of the artifact."
    },
    "BidOwner": {
      "$ref": "UserDTOSchema.json",
      "description": "A UserDTO object representing the owner of the bid."
    },
    "BidAmount": {
      "type": "integer",
      "description": "The amount of the bid.",
      "minimum": 0
    },
    "BidDate": {
      "type": "string",
      "format": "date-time",
      "description": "The date of the bid."
    }
  },
  "required": [ "BidId", "ArtifactId", "BidOwner", "BidAmount" ]
}